generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model FileData {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
}


model NotaFiscal {
  id          Int       @id @default(autoincrement())
  numero      String    @unique
  dataEntrada String
  fornecedor  String
  valor       Int
  itens       Item[]
  resumo      ResumoFiscal?
}

model Item {
  id          Int        @id @default(autoincrement())
  notaFiscal  NotaFiscal @relation(fields: [notaFiscalId], references: [id])
  notaFiscalId Int
  descricao   String
  quantidade  Decimal
  unidade     String
  valor       Int 
  cfop        String
  codigoProduto Int
  grupo       String
  ncm         String
}

model ResumoFiscal {
  id          Int        @id @default(autoincrement())
  notaFiscal  NotaFiscal @relation(fields: [notaFiscalId], references: [id])
  notaFiscalId Int       @unique
  baseCalculo Int 
  aliquota    Int 
  icmsDestacado Int
}